{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "templates/**/*",
        "exclude": "**/*.ts",
        "watchAssets": true
      }
    ],
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "backend": {
      "root": ".",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
